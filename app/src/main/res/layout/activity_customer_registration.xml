<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEF5"
    tools:context=".CustomerRegistration">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Customer Sign Up Form"
        android:textColor="#64137A"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="556dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintVertical_bias="0.0">


        <EditText
            android:id="@+id/FirstName"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/LastName"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="Last Name"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/StreetAddress"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="Street Address"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/ZipCode"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="Zip Code"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/PhNum"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="Phone Number"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="Email Address(xxxxx@xxx.com)"
            android:inputType="textEmailAddress"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/UserName"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="Confirm Email"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="textStart"
            android:textAllCaps="true" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:progress="@android:integer/config_shortAnimTime"
            android:progressBackgroundTint="#43A047"
            android:progressTint="#43A047"
            tools:visibility="visible" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7E8BDB"
            android:shadowColor="#00805151"
            android:stateListAnimator="@android:anim/fade_in"
            android:text="Submit"
            android:visibility="visible" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>