<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEF5"
    android:orientation="horizontal"
    android:weightSum="100">


    <TextView
        android:id="@+id/vendorinfo"
        android:layout_width="475dp"
        android:layout_height="90dp"
        android:layout_weight="66.6"
        android:background="@drawable/border_design"
        android:gravity="center"
        android:shadowColor="#00F1D8D8"
        android:text="TextView1"
        android:textAlignment="center"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vendorinfo1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="TextView2" />

        <TextView
            android:id="@+id/vendorinfo2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/vendorinfo1"
            android:gravity="center"
            android:text="TextView3" />

        <TextView
            android:id="@+id/vendorinfo3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/vendorinfo2"
            android:gravity="center"
            android:text="TextView3" />
    </LinearLayout>


</LinearLayout>
